<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="VRexWindow" parent="GtkApplicationWindow">
    <property name="default_width">800</property>
    <property name="default_height">400</property>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="header">
        <property name="vexpand">1</property>
      </object>
    </child>
    <child>
      <object class="GtkStack" id="stack">
        <property name="transition-type">crossfade</property>
        <child>
          <object class="GtkStackPage">
            <property name="name">placeholder</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <child>
                  <object class="GtkLabel">
                    <property name="hexpand">1</property>
                    <property name="label">Please connect device</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">main</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkBox" id="body">
                    <property name="orientation">vertical</property>
                    <property name="vexpand">1</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="footer">
                    <property name="height_request">32</property>
                    <property name="spacing">5</property>
                    <property name="orientation">horizontal</property>
                    <child>
                      <object class="GtkPicture" id="cover"/>
                    </child>
                    <child>
                      <object class="GtkLabel" id="device_summary"/>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>